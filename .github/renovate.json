{
  "enabled": true,
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Renovate Dashboard ðŸ¤–",
  "rebaseWhen": "conflicted",
  "ignorePaths": [ "**/archive/**" ],
  "kubernetes": {
    "fileMatch": [
      "cluster/.+\\.yml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "cluster/.+/kustomization.yml$"
      ],
      "matchStrings": [
        "https://github.com/(?<depName>.*/.*?)/releases/download/(?<currentValue>.*?)/"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "fireflyiii/core",
        "fireflyiii/data-importer"
      ],
      "versioning": "regex:^version-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "commitMessageTopic": "image {{depName}}",
      "commitMessageExtra": "to {{#if isSingleVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}"
    },
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "traggo/server"
      ],
      "versioning": "regex:^arm-7-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "commitMessageTopic": "image {{depName}}",
      "commitMessageExtra": "to {{#if isSingleVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}"
    },
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "linuxserver/transmission"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.0?(?<minor>\\d+).+-ls(?<patch>\\d+)$",
      "commitMessageTopic": "image {{depName}}",
      "commitMessageExtra": "to {{#if isSingleVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}"
    },
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "commitMessageTopic": "image {{depName}}",
      "commitMessageExtra": "to {{#if isSingleVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "renovate/container"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "addLabels": [
        "renovate/helm"
      ]
    },
    {
      "matchDatasources": [
        "galaxy",
        "galaxy-collection"
      ],
      "addLabels": [
        "renovate/ansible"
      ]
    },
    {
      "matchDatasources": [
        "github-releases",
        "github-tags"
      ],
      "addLabels": [
        "renovate/github-release"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "renovate/github-action"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dep/major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "labels": [
        "dep/minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "labels": [
        "dep/patch"
      ],
      "automerge": true
    }
  ]
}
