{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "renovate/container"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "addLabels": [
        "renovate/helm"
      ]
    },
    {
      "matchDatasources": [
        "galaxy",
        "galaxy-collection"
      ],
      "addLabels": [
        "renovate/ansible"
      ]
    },
    {
      "matchDatasources": [
        "github-releases",
        "github-tags"
      ],
      "addLabels": [
        "renovate/github-release"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "renovate/github-action"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dep/major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "labels": [
        "dep/minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "labels": [
        "dep/patch"
      ],
      "automerge": true
    }
  ]
}
