[Unit]
Description=Transmission BitTorrent Daemon
Wants=network-online.target
After=network-online.target

[Service]
User=downloader
Environment="TRANSMISSION_WEB_HOME=/opt/share/transmission/web"
ExecStart=/opt/bin/transmission-daemon -f --logfile /volume1/homes/downloader/trans.log
ExecReload=/bin/kill -s HUP $MAINPID

[Install]
WantedBy=multi-user.target
